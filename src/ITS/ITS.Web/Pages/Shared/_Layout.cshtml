<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0"
          name="viewport" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="~/css/site.css"
          rel="stylesheet" />
    <script data-auto-replace-svg="nest"
            src="https://use.fontawesome.com/releases/v6.1.1/js/all.js"></script>
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a asp-area=""
               asp-page="/Info/Index"
               class="navbar-brand">
                Issue Tracking System
            </a>
            <button aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    class="navbar-toggler"
                    data-bs-target=".navbar-collapse"
                    data-bs-toggle="collapse"
                    type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a asp-area=""
                           asp-page="/Info/Index"
                           class="nav-link text-dark">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-area=""
                           asp-page="/Tasks/Index"
                           class="nav-link text-dark">
                            Tasks
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a asp-area=""
                               asp-page="/Tasks/WorkStats"
                               class="nav-link text-dark">
                                Stats
                            </a>
                        </li>
                    }
                </ul>
            </div>
            <form class="form-inline my-2 my-lg-0">
                <div class="mr-2"
                     id="alertDiv">
                </div>
                @if (User.Identity is {IsAuthenticated: true })
                {
                    <span class="font-weight-bolder mr-2">Welcome</span>
                    <a asp-page="/User/Dashboard"
                       class="font-weight-bolder mr-1">
                        @User.Identity.Name
                    </a>
                    <a asp-page="/User/Logout"
                       class="text-dark ml-1 btn btn-light">
                        Log me out!
                    </a>
                }
                else
                {
                    <a asp-page="/User/Login">Login</a>
                }
            </form>
        </div>
    </nav>
</header>
<div class="container">
    @if (IsSectionDefined("breadcrumb"))
    {
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                @await RenderSectionAsync("breadcrumb")
            </ol>
        </nav>
    }
    <main class="pb-3"
          role="main">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - ITS (Source code
        <a href="https://github.com/vrhovnik/conf24-2023-aca-demos"
           target="_blank">here</a>) | <a asp-area="" asp-page="/Privacy">
            Privacy
        </a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>